const int mod = 1e9 + 7;
ll BigMod(ll a, ll b) { 
    ll res = 1;
    while (b) {
        if (b & 1) res = 1ll * res * a % mod;
        a = 1ll * a * a % mod;
        b >>= 1;
    }
    return res;
}
]]></content>
